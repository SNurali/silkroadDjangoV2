import React, { useEffect, useState } from 'react';
import { useParams, Link, useNavigate } from 'react-router-dom';
import { useTranslation } from 'react-i18next';
import { MapPin, Star, Share2, Heart, Clock, CheckCircle, XCircle } from 'lucide-react';
import api from '../../services/api';
import { useAuth } from '../../context/AuthContext';

export default function TourDetail() {
    const { t } = useTranslation();
    const { id } = useParams();
    const { user } = useAuth();
    const navigate = useNavigate();
    const [tour, setTour] = useState(null);
    const [loading, setLoading] = useState(true);
    const [activeTab, setActiveTab] = useState('overview');
    const [bookingAmount, setBookingAmount] = useState(1);
    const [bookingLoading, setBookingLoading] = useState(false);

    useEffect(() => {
        const fetchTour = async () => {
            try {
                const res = await api.get(`/sights/${id}/`);
                setTour(res.data);
            } catch (err) {
                console.error("Failed to load tour details", err);
            } finally {
                setLoading(false);
            }
        };
        fetchTour();
    }, [id]);

    const handleBooking = async () => {
        if (!user) {
            navigate('/login', { state: { from: `/tours/${id}` } });
            return;
        }

        setBookingLoading(true);
        try {
            // Construct guests array based on bookingAmount
            // Defaulting to Foreigner (1) as frontend shows foreign price by default.
            // Ideally we should ask for this info in a modal.
            const guests = Array.from({ length: bookingAmount }).map((_, i) => ({
                name: i === 0 ? (user.name || user.email || "Guest") : `Guest ${i + 1}`,
                passport: "TBD", // Placeholder
                citizen: 1 // Default to Foreigner
            }));

            const response = await api.post('/hotels/buy-ticket/', {
                sight_id: tour.id,
                guests: guests
            });

                navigate('/profile');
            } else {
                navigate('/profile');
            }
            navigate('/profile');
        } catch (err) {
            console.error(err);
            alert("Failed to book ticket. " + (err.response?.data?.detail || ""));
        } finally {
            setBookingLoading(false);
        }
    };

    if (loading) {
        return (
            <div className="min-h-screen flex items-center justify-center">
                <div className="spinner-border text-indigo-600 w-12 h-12 border-4 border-indigo-200 border-t-indigo-600 rounded-full animate-spin"></div>
            </div>
        );
    }

    if (!tour) return <div className="text-center py-20">Tour not found</div>;

    // Helper to parse images - Prefer gallery_images from serializer if available
    const images = (tour.gallery_images && tour.gallery_images.length > 0)
        ? tour.gallery_images
        : (tour.images
            ? tour.images.split(',').map(img => img.trim().startsWith('http') ? img.trim() : `http://127.0.0.1:8000${img.trim().startsWith('/media') ? '' : '/media/'}${img.trim().replace(/^\//, '')}`)
            : ["https://images.unsplash.com/photo-1540959733332-eab4deabeeaf?auto=format&fit=crop&q=80&w=1200"]);

    return (
        <div className="bg-slate-50 dark:bg-slate-900 min-h-screen py-8 transition-colors duration-200">
            <div className="container mx-auto px-4">

                {/* Header */}
                <div className="flex flex-col md:flex-row justify-between items-start gap-4 mb-6">
                    <div>
                        <h1 className="text-3xl font-bold text-slate-900 dark:text-white mb-2">{tour.name}</h1>
                        <div className="flex items-center gap-4 text-sm text-slate-600 dark:text-slate-400">
                            <span className="flex items-center gap-1">
                                <MapPin size={16} className="text-indigo-600 dark:text-indigo-400" />
                                {tour.address}
                            </span>
                            <span className="flex items-center gap-1">
                                <Star size={16} className="text-amber-500 fill-amber-500" />
                                {tour.rating || "New"}
                            </span>
                        </div>
                    </div>
                    <div className="flex gap-2">
                        <button className="p-2 rounded-full bg-white dark:bg-slate-800 text-slate-600 dark:text-slate-300 hover:text-red-500 hover:bg-red-50 dark:hover:bg-slate-700 transition-colors border border-slate-200 dark:border-slate-700 shadow-sm">
                            <Heart size={20} />
                        </button>
                        <button className="p-2 rounded-full bg-white dark:bg-slate-800 text-slate-600 dark:text-slate-300 hover:text-indigo-500 hover:bg-indigo-50 dark:hover:bg-slate-700 transition-colors border border-slate-200 dark:border-slate-700 shadow-sm">
                            <Share2 size={20} />
                        </button>
                    </div>
                </div>

                {/* Gallery */}
                <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8 h-[400px] md:h-[500px]">
                    <div className="md:col-span-2 h-full">
                        <img
                            src={images[0]}
                            alt={tour.name}
                            className="w-full h-full object-cover rounded-2xl shadow-sm bg-slate-200 dark:bg-slate-800"
                        />
                    </div>
                    <div className="hidden md:flex flex-col gap-4 h-full">
                        <img
                            src={images[1] || images[0]}
                            alt="Gallery 2"
                            className="w-full h-1/2 object-cover rounded-2xl shadow-sm bg-slate-200 dark:bg-slate-800"
                        />
                        <div className="relative w-full h-1/2">
                            <img
                                src={images[2] || images[0]}
                                alt="Gallery 3"
                                className="w-full h-full object-cover rounded-2xl shadow-sm bg-slate-200 dark:bg-slate-800"
                            />
                            {images.length > 3 && (
                                <div className="absolute inset-0 bg-black/50 rounded-2xl flex items-center justify-center text-white font-bold text-xl cursor-pointer hover:bg-black/60 transition-colors">
                                    +{images.length - 3} Photos
                                </div>
                            )}
                        </div>
                    </div>
                </div>

                {/* Content Layout */}
                <div className="grid lg:grid-cols-3 gap-8">

                    {/* Main Content */}
                    <div className="lg:col-span-2">
                        {/* Tabs */}
                        <div className="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-8 overflow-hidden transition-colors">
                            <div className="flex border-b border-slate-200 dark:border-slate-700 overflow-x-auto">
                                <button
                                    onClick={() => setActiveTab('overview')}
                                    className={`px-6 py-4 font-medium text-sm whitespace-nowrap transition-colors border-b-2 ${activeTab === 'overview' ? 'border-indigo-600 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-200'}`}
                                >
                                    {t('tours.overview')}
                                </button>
                                <button
                                    onClick={() => setActiveTab('requirements')}
                                    className={`px-6 py-4 font-medium text-sm whitespace-nowrap transition-colors border-b-2 ${activeTab === 'requirements' ? 'border-indigo-600 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-200'}`}
                                >
                                    {t('tours.requirements')}
                                </button>
                                <button
                                    onClick={() => setActiveTab('feedbacks')}
                                    className={`px-6 py-4 font-medium text-sm whitespace-nowrap transition-colors border-b-2 ${activeTab === 'feedbacks' ? 'border-indigo-600 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-200'}`}
                                >
                                    {t('tours.feedbacks')}
                                </button>
                                <button
                                    onClick={() => setActiveTab('map')}
                                    className={`px-6 py-4 font-medium text-sm whitespace-nowrap transition-colors border-b-2 ${activeTab === 'map' ? 'border-indigo-600 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-slate-600 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-200'}`}
                                >
                                    {t('tours.map')}
                                </button>
                            </div>

                            <div className="p-6">
                                {activeTab === 'overview' && (
                                    <div className="prose dark:prose-invert max-w-none text-slate-600 dark:text-slate-300">
                                        <p>{tour.description}</p>
                                    </div>
                                )}
                                {activeTab === 'requirements' && (
                                    <div>
                                        <h3 className="font-bold text-slate-900 dark:text-white mb-4">Entry Requirements</h3>
                                        <div className="space-y-4">
                                            {tour.required_conditions && Object.entries(tour.required_conditions).map(([key, val]) => (
                                                <div key={key} className="flex items-center justify-between p-3 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-100 dark:border-slate-700">
                                                    <span className="capitalize font-medium text-slate-700 dark:text-slate-300">{key.replace(/_/g, ' ')}</span>
                                                    {val ? (
                                                        <span className="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full text-xs font-bold flex items-center gap-1">
                                                            <CheckCircle size={14} /> Required
                                                        </span>
                                                    ) : (
                                                        <span className="px-3 py-1 bg-slate-200 dark:bg-slate-700 text-slate-600 dark:text-slate-400 rounded-full text-xs font-bold flex items-center gap-1">
                                                            <XCircle size={14} /> Optional
                                                        </span>
                                                    )}
                                                </div>
                                            ))}
                                            {(!tour.required_conditions || Object.keys(tour.required_conditions).length === 0) && (
                                                <p className="text-slate-500 dark:text-slate-400 italic">No specific requirements mentioned.</p>
                                            )}
                                        </div>
                                    </div>
                                )}
                                {activeTab === 'map' && (
                                    <div className="h-[400px] bg-slate-100 dark:bg-slate-700 rounded-xl flex items-center justify-center text-slate-400 dark:text-slate-500">
                                        Map View Coming Soon (Coordinates: {tour.geolocation})
                                    </div>
                                )}
                                {activeTab === 'feedbacks' && (
                                    <div className="text-center py-12 text-slate-500 dark:text-slate-400">
                                        No reviews yet. Be the first to review!
                                    </div>
                                )}
                            </div>
                        </div>
                    </div>

                    {/* Booking Sidebar */}
                    <div className="lg:col-span-1">
                        <div className="bg-white dark:bg-slate-800 p-6 rounded-2xl shadow-lg border border-slate-200 dark:border-slate-700 sticky top-24 transition-colors">
                            <div className="flex items-baseline gap-1 mb-2">
                                <span className="text-3xl font-bold text-indigo-600 dark:text-indigo-400">
                                    {parseInt(Number(tour.is_foreg || 0)).toLocaleString()}
                                </span>
                                <span className="text-sm font-bold text-slate-500 dark:text-slate-400">UZS</span>
                                <span className="text-sm text-slate-400 dark:text-slate-500 ml-1">{t('tours.per_person')}</span>
                            </div>

                            <div className="my-6 space-y-4">
                                <div>
                                    <label className="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Foreigner Price</label>
                                    <div className="p-3 bg-slate-50 dark:bg-slate-700/50 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 dark:text-slate-300 font-mono">
                                        {parseInt(Number(tour.is_foreg || 0)).toLocaleString()} UZS
                                    </div>
                                </div>
                                <div>
                                    <label className="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Local Price</label>
                                    <div className="p-3 bg-slate-50 dark:bg-slate-700/50 border border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 dark:text-slate-300 font-mono">
                                        {parseInt(Number(tour.is_local || 0)).toLocaleString()} UZS
                                    </div>
                                </div>

                                <div>
                                    <label className="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Quantity</label>
                                    <div className="flex items-center gap-4">
                                        <button
                                            onClick={() => setBookingAmount(Math.max(1, bookingAmount - 1))}
                                            className="w-10 h-10 rounded-lg bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 flex items-center justify-center font-bold text-lg text-slate-700 dark:text-slate-200 transition-colors"
                                        >
                                            -
                                        </button>
                                        <span className="text-xl font-bold text-slate-900 dark:text-white w-8 text-center">{bookingAmount}</span>
                                        <button
                                            onClick={() => setBookingAmount(bookingAmount + 1)}
                                            className="w-10 h-10 rounded-lg bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 flex items-center justify-center font-bold text-lg text-slate-700 dark:text-slate-200 transition-colors"
                                        >
                                            +
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div className="pt-4 border-t border-slate-100 dark:border-slate-700/50 mb-6">
                                <div className="flex justify-between items-center text-lg font-bold text-slate-900 dark:text-white">
                                    <span>Total</span>
                                    <span>{(parseInt(Number(tour.is_foreg || 0)) * bookingAmount).toLocaleString()} UZS</span>
                                </div>
                            </div>

                            <button
                                onClick={handleBooking}
                                disabled={bookingLoading}
                                className="w-full py-4 bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white font-bold rounded-xl shadow-lg shadow-indigo-600/20 dark:shadow-indigo-900/40 transition-all flex items-center justify-center gap-2 disabled:opacity-70 disabled:cursor-not-allowed"
                            >
                                {bookingLoading ? (
                                    <div className="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin" />
                                ) : (
                                    t('tours.book_now')
                                )}
                            </button>

                            <div className="mt-4 text-center">
                                <p className="text-xs text-slate-400 dark:text-slate-500">Free cancellation up to 48 hours before the tour.</p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    );
}
